@model WOM_EYE.Models.Drop.DropModel

@{
    ViewData["Title"] = "Drop";
    ViewData["responseCodeDrop"] = Model.responseCodeDrop;
}

<!-- #region Area Response -->
<div>
    <div style="height:20px;width:60%;margin-left:auto">
        @if (@Model.responseCodeDrop == "200")
        {
            <span class="alert-success" style="border-radius:5px; padding:3px; float:right">
                @Model.responseMessageDrop
            </span>
        }
        else
        {
            if (@Model.responseCodeDrop != null && @Model.responseCodeDrop != "xx")
            {
                <span class="alert-danger" style="border-radius:5px; padding:3px; float:right">
                    Update Failed : @Model.responseMessageDrop
                </span>
            }

        }
    </div>
</div

<h3>DROP PROJECT</h3>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Input Hidden -->
            <div class="form-group">
                <input asp-for="PROJECT_ID" class="form-control" type="hidden" />
                <span asp-validation-for="PROJECT_ID" class="text-danger"></span>
            </div>

            <!-- Input Alasan -->
            <div class="form-group">
                <label asp-for="ALASAN" class="control-label"></label>
                <input asp-for="ALASAN" class="form-control" style="border-radius:10em;"/>
                <span asp-validation-for="ALASAN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" style="border-radius:10em;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
