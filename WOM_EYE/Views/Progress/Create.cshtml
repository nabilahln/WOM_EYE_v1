@model WOM_EYE.Models.Progress.ProgressModel

@{
    ViewData["Title"] = "Create Progress";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["responseCodeProgress"] = Model.responseCodeProgress;
}

<!-- #region Area Response -->
<div>
    <div style="height:20px;width:60%;margin-left:auto">
        @if (@Model.responseCodeProgress == "200")
        {
            <span class="alert-success" style="border-radius:5px; padding:3px; float:right">
                @Model.responseMessageProgress
            </span>
        }
        else
        {
            if (@Model.responseCodeProgress != null && @Model.responseCodeProgress != "xx")
            {
                <span class="alert-danger" style="border-radius:5px; padding:3px; float:right">
                    Update Failed : @Model.responseMessageProgress
                </span>
            }

        }
    </div>
</div>

<h3>INSERT DATA PROGRESS</h3>

<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateValidation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Input Hidden -->
            <div class="form-group">
                <input asp-for="PROJECT_ID" class="form-control" type="hidden" />
                <input asp-for="USR_CRT" class="form-control" type="hidden" />
            </div>

            <!-- Input Deskripsi -->
            <div class="form-group">
                <label asp-for="DESKRIPSI" class="control-label"></label>
                <input asp-for="DESKRIPSI" class="form-control" style="border-radius:10rem;" type="text" autofocus />
                <span asp-validation-for="DESKRIPSI" class="text-danger"></span>
            </div>

            <!-- Button -->
            <button class="form-control bg-success" name="btnSaveProject" id="btnSaveProject" value="SaveCatatan" style="color:white; border-radius:10rem;">
                Save <i class="fa fa-save"> </i>
            </button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Project">Back to List</a>
</div>


<script src="~/vendor/jquery/jquery.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
